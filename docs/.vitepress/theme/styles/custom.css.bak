/* theme reset end */

/*tags and archives page style*/
.article {
  padding: 4px 0 4px 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-o {
  display: inline-block;
  margin-right: 10px;
  margin-bottom: 3px;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  /* background-color: var(--li-dot-color); */
}


.date {
  /* color: var(--date-color); */
  font-family: var(--date-font-family);
}

/*mobile*/
@media screen and (max-width: 720px) {
  .VPDoc {
      padding-bottom: 20px !important;
  }

  .vp-doc h1 {
      font-size: 1.25rem !important;
  }

  .article {
      padding: 4px;
  }

  .title-o {
      margin-right: 4px;
  }

  .titleDiv {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      width: 17em;
  }
}

.logo {
  height: 44px !important;
  margin-bottom: 0.4rem;
}

/* 文章宽度 */
.content-container {
  max-width: unset !important;
}

h1 {
  margin-top: 0px;
}

.VPDoc > .container > .content {
  padding: 0 !important;
}

/* pre, code, kbd, samp {
  font-family: var(--vp-font-family-mono);
} */

.vp-doc h2 {
  margin: 15px 0 0;
  padding-top: 10px;
  border-top: none;
}

.vp-doc h3,h4,h5 {
  margin: 10px 0 0;
}

.vp-doc h4 {
  font-size: 18px;
}

.VPDoc .content-container img {
  border-radius: 5px;
}

/* slim scroll bar for windows based web browsers - works on firefox */
* {
  scrollbar-color: var(--vp-c-gutter) var(--vp-button-alt-bg);
  scrollbar-width: thin;
}

/* slim scroll bar for windows based web browsers - works on chrome, edge, and safari */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

/* scrolling handle */
::-webkit-scrollbar-thumb {
  background: var(--vp-c-gutter);
}

/* handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: var(--vp-button-alt-hover-bg);
}

/* scrolling track/backgronund color */
::-webkit-scrollbar-track {
  background: var(--vp-button-alt-bg);
}

/* mathjax3.css */
mjx-container {
  display: inline-block;
  margin: auto 2px -2px;
}

mjx-container > svg {
  margin: auto;
}



/* 搜索 */
.modal-back {
  background: rgba(120, 129, 147, .22);
  transition: all 0.35s;
  backdrop-filter: blur(10px);
}

.modal-back .DocSearch-Form  {
  background: var(--docsearch-modal-background);
  box-shadow: unset !important;
  max-width: var(--docsearch-modal-width);
}

.modal-back .flex-logo {
  display: none !important
}

.modal-back .DocSearch-Input {
  border: 0px solid var(--vp-c-brand);
  background-color: unset !important;
}

.DocSearch-Hit a {
  background: var(--docsearch-hit-background);
  border-radius: 4px;
  box-shadow: unset !important;
}

.DocSearch-Hit-source,
.DocSearch-HitsFooter {
  display: none;
}

.DocSearch-NoResults-Prefill-List {
  display: none;
}
.vp-doc ul, .vp-doc ol {
  padding-left: 1.8rem;
}

/* 搜索 */
.DocSearch-Button {
  border-radius: 4rem;
}

.DocSearch-Button-Keys {
  margin-left: 2rem;

}

.DocSearch.DocSearch-Container, .VPLocalSearchBox .backdrop {
  background: rgba(120, 129, 147, .22) !important;
  transition: all 0.35s;
  backdrop-filter: blur(10px);
}


.DocSearch-Modal {
  background: var(--docsearch-modal-background);
  box-shadow: unset !important;
  max-width: var(--docsearch-modal-width);
}

.DocSearch-Footer {
  display: none !important
}

.DocSearch-Form {
  border: 0px solid var(--vp-c-brand);
  background-color: unset !important;
}

.DocSearch-Hit a {
  background: var(--docsearch-hit-background);
  border-radius: 4px;
  box-shadow: unset !important;
}

.DocSearch-Hit-source,
.DocSearch-HitsFooter {
  display: none;
}

.DocSearch-NoResults-Prefill-List {
  display: none;
}

.VPLocalSearchBox .shell {
  /* max-width: var(--docsearch-modal-width);  */
}
.search-bar, .VPLocalSearchBox .shell .result {
  border: unset !important;
}

/* 左边栏 */
.VPSidebar {
  padding-left: 32px !important;
  width: unset !important;
}

.VPNavBarTitle .title {
  font-size: 1.8rem;
}


.VPNavBar.has-sidebar .title {
  padding-left: unset !important;
}

.VPNavBar {
  border-bottom: 0;
}

.VPNav {
  border-bottom: 1px solid #eee;
}

.VPNav .content {
  border-bottom: 1px solid #eee;
}
.VPNavBarTitle {
  border-bottom: 1px solid #eee !important;
}

