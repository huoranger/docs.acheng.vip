/* 平滑滚动 */
html,
body {
  scroll-behavior: smooth !important;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 0.5rem;
  height: 0.5rem;
}


::-webkit-scrollbar-thumb {
  background-color: #a8a8a8;
  background-clip: padding-box;
  border: 3px solid transparent;
  border-radius: 5px;
}

#VPContent.has-sidebar {
  padding-left: var(--vp-sidebar-width) !important;
}

